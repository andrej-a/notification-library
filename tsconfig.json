{
    "compilerOptions": {
        "target": "ES6",
        "lib": ["ES2015", "DOM"],
        "jsx": "react",
        "module": "es6",
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist/",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"],
}
